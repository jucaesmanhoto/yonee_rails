<div class="container-flower">
  <h3>QUASE L√Å...</h3>
  <div class="container-col-center">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: false,
                    input_html: {
                      autocomplete: "email",
                      class: "input-devise",
                      placeholder: "EMAIL"
                      } %>
        <%= f.input :password,
                    required: false,
                    label: false,
                    input_html: {
                      autocomplete: "password",
                      class: "input-devise",
                      placeholder: "SENHA"
                      } %>
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me, as: :boolean %>
          <%= f.label :remember_me, "MANTER CONECTADO", class: 'check-label' %>
        <% end %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "ENTRE", class: "link-white" %>
      </div>
    <% end %>
    <div class="container-col-center links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>